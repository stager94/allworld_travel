package  {
	import flash.display.MovieClip;
	import flash.events.Event;
	import flash.text.TextField;
	
	public class SearchItem extends MovieClip{

		
		//--------------------------------------------------------------------------------------------------------- 
  		// 
 		//  PUBLIC & INTERNAL VARIABLES 
		// 
		//---------------------------------------------------------------------------------------------------------
  
  		public var txtItem:TextField;
		
		//--------------------------------------------------------------------------------------------------------- 
		//
		// PRIVATE & PROTECTED VARIABLES
		//
		//---------------------------------------------------------------------------------------------------------
  		
		private var _finedText:String = "";
		private var _data:VOItem;
  
		//--------------------------------------------------------------------------------------------------------- 
		//
		//  CONSTRUCTOR 
		// 
		//---------------------------------------------------------------------------------------------------------
		
		public function SearchItem() {
			addEventListener(Event.ADDED_TO_STAGE, _handlerAddedtoStage, false, 0, true);
		}

		//--------------------------------------------------------------------------------------------------------- 
		// 
		//  PUBLIC & INTERNAL METHODS 
		// 
		//---------------------------------------------------------------------------------------------------------

  
		//--------------------------------------------------------------------------------------------------------- 
		// 
		//  GETTERS & SETTERS   
		// 
		//---------------------------------------------------------------------------------------------------------
  		
		public function set	data(value:VOItem):void{
			_data = value;
		}
		public function get	data():VOItem{
			return _data;
		}
		
		public function set finedText(value:String):void{
			_finedText = value;
		}
  
		//--------------------------------------------------------------------------------------------------------- 
		//
		// PRIVATE & PROTECTED METHODS 
		//
		//---------------------------------------------------------------------------------------------------------
		  
		 private function _init():void{
			 txtItem.text = _finedText;
		 }
  
		//--------------------------------------------------------------------------------------------------------- 
		// 
		//  EVENT HANDLERS  
		// 
		//---------------------------------------------------------------------------------------------------------

  
  		private function _handlerAddedtoStage(event:Event):void{
			removeEventListener(Event.ADDED_TO_STAGE, _handlerAddedtoStage);
			_init();
		}
  
		//--------------------------------------------------------------------------------------------------------- 
		// 
		//  HELPERS  
		// 
		//--------------------------------------------------------------------------------------------------------- 
  
  
		//--------------------------------------------------------------------------------------------------------- 
		// 
		//  END CLASS  
		// 
		//---------------------------------------------------------------------------------------------------------
		


	}
	
}
