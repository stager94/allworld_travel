- @country_news.reverse.each do |newsblock|
  .col-md-3
    %b
    .textblock.all-news-block.gray-shadow
      .microblock
        .showplace_wcorner
          .showplace_item
            .showplace_img
              - if tmpimage = newsblock.newspictures.first
                = image_tag tmpimage.image.url(:thumb)
      .all-news-text
        %span.news-date
          = newsblock.created_at.strftime("%d.%m.%Y")
        %br
          = link_to newsblock.name, "/news/"+newsblock.tag
        .clear
%p
  .col-md-12
    - if @country_news.count != @all_country_news.count
      = form_tag all_country_news_showmore_path, remote: true do
        = hidden_field_tag :page, @country_page
        = hidden_field_tag :country_id, @country_id

        = submit_tag "ПОКАЗАТЬ ЕЩЕ", class: "showmore-button"
      = link_to "", "#neighbours", class: "goup-button"
    - else
      = link_to "", "#neighbours", class: "goup-button showmoreless"