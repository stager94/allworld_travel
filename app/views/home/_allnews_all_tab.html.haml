- @news.reverse.each do |newsblock|
  .col-md-3
    %b
    .textblock.all-news-block.gray-shadow
      .microblock
        .showplace_wcorner
          .showplace_item
            .showplace_img
              - if tmpimage = newsblock.newspictures.first
                = image_tag tmpimage.image.url(:thumb)
      .all-news-text
        %span.news-date
          = newsblock.created_at.strftime("%d.%m.%Y")
        %br
          = link_to newsblock.name, "/news/"+newsblock.tag
        .clear
%p
  .col-md-12
    - if @news.count != News.all.count or (@country_ids.present? and @news.count != News.where(country_id: @country_ids).count)
      = form_tag allnews_showmore_path, remote: true do
        = hidden_field_tag :page, @page
        - if @country_ids.present?
          - @country_ids.each do |ci|
            = hidden_field_tag "country_ids[]", ci
        
        = submit_tag "ПОКАЗАТЬ ЕЩЕ", class: "showmore-button"
      = link_to "", "#countries_ids", class: "goup-button"
    - else
      = link_to "", "#countries_ids", class: "goup-button showmoreless"