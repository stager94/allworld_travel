<div class="microcontainer">
<h2 class='textcenter'>Вход</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),  html: { class: "form-horizontal" }) do |f| %>
  <div class='field form-group'><%= f.label :login, class: "col-sm-3 control-label" %><div class="col-sm-6" style="margin: 0 20px;">
  <%= f.text_field :login, autofocus: true, class: "form-control" %></div>
</div>
  <div class='field form-group'><%= f.label :password, class: "col-sm-3 control-label" %><div class="col-sm-6" style="margin: 0 20px;">
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>
</div>
  <% if devise_mapping.rememberable? -%>
    <div class='field form-group'><div class="col-sm-3 control-label"> </div><div class="col-sm-6" style="margin: 0 20px;"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div></div>
  <% end -%>

  <div class='field form-group textcenter'><%= f.submit "Войти", class:'btn btn-primary' %></div>
<% end %>
<div class="clear"></div>
<%= render "devise/shared/links" %>


</div>
