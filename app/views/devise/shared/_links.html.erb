<div class="textcenter">
<hr>
<%- if controller_name != 'sessions' %>
  <%= link_to "Войти", new_session_path(resource_name), class:'btn btn-primary margin10' %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Регистрация", new_registration_path(resource_name), class:'btn btn-primary margin10' %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Забыли пароль?", new_password_path(resource_name), class:'btn btn-primary margin10' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Не пришло письмо с подтверждением?", new_confirmation_path(resource_name), class:'btn btn-primary margin10' %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Не получили инструкцию по розблокировке?", new_unlock_path(resource_name), class:'btn btn-primary margin10' %>
<% end -%>
