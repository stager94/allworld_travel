<div class="microcontainer">
<h2 class='textcenter'>Изменить информацию</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <div class='field form-group'><%= f.label :name, class: "col-sm-3 control-label" %>
  <div class="col-sm-6" style="margin: 0 20px;">
  <%= f.text_field :name, autofocus: true, class: "form-control" %></div>
</div>
  <div class='field form-group'><%= f.label :family, class: "col-sm-3 control-label" %>
  <div class="col-sm-6" style="margin: 0 20px;">
  <%= f.text_field :family, class: "form-control" %></div>
  </div>
  <div class='field form-group'><%= f.label :username, class: "col-sm-3 control-label" %>
  <div class="col-sm-6" style="margin: 0 20px;">
  <%= f.text_field :username, class: "form-control" %></div>
</div>
  <div class='field form-group'><%= f.label :email, class: "col-sm-3 control-label" %>
  <div class="col-sm-6" style="margin: 0 20px;">
  <%= f.email_field :email, class: "form-control" %></div>
</div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class='field form-group'>Ожидается подтверждение: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class='field form-group'><%= f.label :password, class: "col-sm-3 control-label" %> <i>(оставьте пустым, если не хотите менять)</i>
  <div class="col-sm-6" style="margin: 0 20px;">
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>
    </div>

  <div class='field form-group'><%= f.label :password_confirmation, class: "col-sm-3 control-label" %>
  <div class="col-sm-6" style="margin: 0 20px;">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div>
  </div>

  <div class='field form-group'><%= f.label :current_password, class: "col-sm-3 control-label" %> <i>(укажите текущий пароль для внесения изменений)</i>
  <div class="col-sm-6" style="margin: 0 20px;">
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %></div>
  </div>

  <div class='field form-group textcenter'><%= f.submit "Изменить", class:'btn btn-primary' %></div><br /><br />
  <div class="clear"></div>
<% end %>
<%= render "devise/shared/links" %>

</div>
