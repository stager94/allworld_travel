%h2 Изменить пароль
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "" }) do |f|
  = devise_error_messages!
  .form-group
    = f.label :password
    .controls
      = f.password_field :password, autofocus: true, value: '', class: 'form-control'
  .form-group
    = f.label :password_confirmation
    .controls
      = f.password_field :password_confirmation, autofocus: true, value: '', class: 'form-control'
  .form-group
    = f.label :current_password
    .controls
      = f.password_field :current_password, autofocus: true, value: '', class: 'form-control'

  .actions
    = f.submit 'Изменить мой пароль', class: 'btn btn-primary'
