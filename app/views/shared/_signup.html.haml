.modal.fade{:id=>"sign_up", :tabindex=>"-1", :role=>"dialog", 'aria-labelledby'=>"signupLabel", 'aria-hidden'=>"true", :style=>'display:none'}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{:type=>"button", 'data-dismiss'=>"modal", 'aria-hidden'=>"true"} &times; 
        %h4{:class=>'modal-title', :id=>"signupLabel"} 
          = t('user.register')
      %div{:class=>'modal-body'}
        = form_for(User.new, url: registration_path(:user), html: {id: 'sign_up_user', :'data-type' => 'json', :honeypot => true}, remote: true) do |f|
          .form-inputs
            .form-group
              = f.label :username, t('user.username'), class: "control-label"
              .inpt
                = f.text_field :username, class: "form-control", style: "width:300px;", required: true, placeholder: "введите логин", :pattern => "[0-9a-zA-Z_\-]{3,}", :title =>"Используйте только цифры и латинские символы, минимум 3 символа"
            .form-group
              = f.label :password, t('user.password'), class: "control-label"
              .inpt
                = f.password_field :password, autocomplete: "off", class: "form-control", style: "width:300px;", required: true, placeholder: "введите пароль", :pattern => "[0-9a-zA-Z_\-]{6,}", :title =>"Используйте только цифры и латинские символы, минимум 6 символов"
            .form-group
              = f.label :password_confirmation, t('user.confirmpassword'), class: "control-label"
              .inpt
                = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", style: "width:300px;", required: true, placeholder: "повторите пароль", :pattern => "[0-9a-zA-Z_\-]{6,}", :title =>"Используйте только цифры и латинские символы, минимум 6 символов"
            .form-group
              = f.label :email, t('user.email'), class: "control-label"
              .inpt
                = f.email_field :email, class: "form-control", style: "width:300px;", :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}', placeholder: "введите E-mail", :title =>"например email@example.com"
            .form-group
              .control-label
              .form-inline
                = f.check_box :remember_me
                = f.label :remember_me, t('user.remember')
          .modalfooter
            .form-group{align: "center"}
              = f.submit t('user.register'), class: "btn btn-primary"
      .modal-footer
      
