.tabmenu
  .tabmenu-header
    .tab-link.active
      %span{"tab-id" => "fresh_news"}
        Новости
    .tab-link
      %span{"tab-id" => "all_news"}
        События

  .tab-panel.active{id: "fresh_news"}
    .row.no-margin
      - piece = @last_news.last
      - if piece.present?
        .col-md-7.main-news.gray-shadow
          %b
            = link_to piece.name, "/news/"+piece.tag
          %hr.no-margin
            %span.news-date
              = piece.created_at.strftime("%d.%m.%Y")
          %p
          - if tmpimage = piece.newspictures.first
            .showplace_wcorner_50
              .showplace_item
                .showplace_img_50
                  = image_tag tmpimage.image.url(:medium)
          = piece.page
      - @last_news.select{|ln| ln.id != @last_news.last.id}.reverse.each do |piece| 
        .col-md-5.older-news.gray-shadow
          .inherit-height
            %b
              = link_to piece.name, "/news/"+piece.tag
            %hr.no-margin
              %span.news-date
                = piece.created_at.strftime("%d.%m.%Y")
            %p
            - if tmpimage = piece.newspictures.first
              .showplace_wcorner_40
                .showplace_item
                  .showplace_img
                    = image_tag tmpimage.image.url(:thumb)
            .older-news-text
              = piece.page

  .tab-panel.row{id: "all_news"}
    .shpage
    .textsblocks
      = render "allnews_all_tab"